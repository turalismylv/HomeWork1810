@using front_to_back.Areas.Admin.ViewModels
@model TeamMemberIndexViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Team Members</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="teammember" asp-area="admin">CREATE Team Member</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Photo</th>
                                        <th>FullName</th>
                                        <th>Position</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var teamMember in Model.TeamMembers)
                                    {
                                        <tr>
                                            <td>@teamMember.Id</td>
                                            <td> <img src="~/assets/img/@teamMember.PhotoPath"></td>
                                            <td>@teamMember.Name @teamMember.Surname</td>
                                            <td>@teamMember.Position</td>
                                            <td >

                                                <a class="btn btn-primary " asp-action="update" asp-controller="teammember" asp-area="admin" asp-route-id=@teamMember.Id>Update</a>
                                                <a class="btn btn-primary btn-danger " asp-action="delete" asp-controller="teammember" asp-area="admin" asp-route-id=@teamMember.Id>Delete</a>
                                                 <a class="btn btn-primary btn-details " asp-action="details" asp-controller="teammember" asp-area="admin" asp-route-id=@teamMember.Id>Details</a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>